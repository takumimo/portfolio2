


<div class="container">
	<div style="margin-bottom: 20px;">
    <%= flash[:notice] %>
  </div>
<div class="row">
	<div class="search-window">
		<%= search_form_for @q do |f| %>
  			<%= f.label :text_cont, "キーワード検索" %>
  			<%= f.search_field :text_cont %>
			<%= f.submit "検索" %>
		<% end %>
	</div>
	<div class="gretel">
	<% if params[:q] %>
		<% breadcrumb :postsq, @posts %>
		<%= breadcrumbs separator: " &rsaquo; " %>
	<% elsif params[:tag_name] %>
		<% breadcrumb :tag, @posts %>
		<%= breadcrumbs separator: " &rsaquo; " %>
	<% else %>
		<% breadcrumb :posts, @posts %>
		<%= breadcrumbs separator: " &rsaquo; " %>
	<% end %>
	</div>
</div>
	<div class="tab_wrap">
		<input id="tab1" type="radio" name="tab_btn" checked>
		<input id="tab2" type="radio" name="tab_btn">
		<input id="tab3" type="radio" name="tab_btn">

		<div class="tab_area">
			<label class="tab1_label" for="tab1">相談一覧</label>
			<label class="tab2_label" for="tab2">注目数</label>
			<label class="tab3_label" for="tab3">tab3</label>
		</div>

		<div class="panel_area">

			<div id="panel1" class="tab_panel">
				<h2><strong>相談一覧</strong></h2>
				<% @posts.each do |post| %>
					<div>
						<div class="post-index">
							<div class="post-article">
								<h3><%= link_to post.title, post_path(post) %></h3>
							</div>
							<div class="post-name">ユーザー名:  <%= link_to post.user.name, user_path(post.user) %></div>
							<ul class="post-ul">
								<li class="post-image">
									<%= link_to user_path(post.user) do %>
										<%= attachment_image_tag post.user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg", class: 'image' %>
									<% end %>
								</li>
								<!-- 興味あるボタン -->
								<% if current_user != post.user %>
								<li class="post-like", id="likes_buttons_<%= post.id %>">
									<%= render 'likes/like', post: post %>
								</li>
								<% end %>
								<!-- 興味あるボタン -->
								<!-- 削除ボタン -->
								<% if current_user == post.user %>
								<li class="post-destroy">
									<p><%= link_to '削除する', post_path(post), method: :delete, data: {confirm: "本当に消しますか" }%></p>
								</li>
								<% end %>
								<!-- 削除ボタン -->
								<!-- 編集ボタン -->
								<% if current_user == post.user %>
								<li class="post-edit">
									<p><%= link_to '編集する', edit_post_path(post) %></p>
								</li>
								<% end %>
								<!-- 編集ボタン -->
								<!-- タグ -->
								<% post.tags.each do |tag| %>
								<div class="post-tag btn btn-success">
									<li><%= link_to tag.name, posts_path(tag_name: tag.name) %></li>
								</div>
								<% end %>
								<!-- タグ -->
							</ul>
						</div>
					</div>
				<% end %>

			</div>
			<div id="panel2" class="tab_panel">
				<% @all_ranks.each.with_index(1) do |post, i| %>
				<div class="rank-posts">
						<span><%= "第#{i}位" %></span>
						<span>
							
								<%= attachment_image_tag post.user, :profile_image, :fill, 30, 30,fallback: "no_image.jpg" %>

						</span>
						<span class="rank-content">by<%= link_to post.user.name, user_path(post.user) %>さん</span>
						<span class="rank-content"><%= link_to post.title, post_path(post) %></span>
						
					
					
				</div>
				
				<% end %>
			</div>
			<div id="panel3" class="tab_panel">
				<p>panel3</p>
			</div>

		</div>

	</div><!-- tab-wrap -->
 </div>

