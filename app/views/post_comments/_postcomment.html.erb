<% post.post_comments.each do |post_comment| %>
	<%= post_comment.text %>
		<p style="margin-top: 10px;">username:  <%= link_to post_comment.user.name, user_path(post_comment.user) %></p>
		<%= post_comment.created_at.to_s(:datetime) %>
	<%= link_to user_path(post_comment.user) do %>
		<%= attachment_image_tag post_comment.user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg", class: 'image' %>
	<% end %>
	<% if post_comment.user == current_user %>
		<%= link_to 'Destroy',post_comment_path(post_comment.post,post_comment), method: :delete, remote: true, data: {confirm: "本当に消しますか" } %>
	<% end %>
<% end %>

