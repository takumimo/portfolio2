<h2>パスワードの再登録</h2>
<div class="forgot-password">
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		<%= render "devise/shared/error_messages", resource: resource %>
		<div class="field">
	    	<%= f.label :email %><br />
	    	<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-reset-email form-control" %>
		</div>
		<div class="actions">
	    	<%= f.submit "メールを送信", class: "devise-mail-submit" %>
		</div>
	<% end %>
	<div class="devise-new-link">
		<%= render "devise/shared/links" %>
	</div>
	
</div>
